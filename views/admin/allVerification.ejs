<div class="table-responsive">
  <%if(verifys != ''){%>
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">S/N</th>
        <th scope="col">Verification ID</th>
        <th scope="col">Users name</th>
        <th scope="col">Status</th>
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>

    <tbody>
      <%  verifys.forEach((element, index) => {  %>
        <tr class="align-middle">
          <td><h5 class="text-white"><%=index %></h5></td>
          <td><h5 class="text-white"><%= element.username %></h5></td>
          <td><h5 class="text-white"><%= element.fullname %></h5></td>
          <td><h5 class="text-white"> <%=element.gender %></h5></td>
          <!-- <td><img src="/IMG_UPLOADSelement.image%>" alt="Image" style="width: 800px; height: fit-content;" ></td> -->
          <td class="text-end">
            <div class="d-flex flex-row justify-content-end gap-2">
              <a href="/admin/viewVerify/<%=element._id%> " type="button" class="btn btn-primary btn-small">
                <i class="bi bi-eye"></i>
              </a>
              <a href="/admin/editVerification/<%=element._id%> " type="button" class="btn btn-warning btn-small">
                <i class="bi bi-pencil"></i>
              </a>
              <form action="/admin/deleteVerification/<%=element._id%>" method="post" class="position-relative">
                <button type="submit" class="btn btn-danger btn-small">
                  <i class="bi bi-trash"></i>
                </button>
              </form>
            </div>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <% }else{%>
    <h1 class="text-center text-secondary mt-5">No Verification request yet!</h1>
    <% } %>
</div>


